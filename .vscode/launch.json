{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Listen for Xdebug",
      "type": "php",
      "request": "launch",
      "hostname": "0.0.0.0",
      "port": 9000,
      "pathMappings": {
        "/var/www/html": "${workspaceFolder}/backend/php"
      }
    },
    {
      "name": "Attach to packager",
      "cwd": "${workspaceFolder}/frontend",
      "type": "reactnative",
      "request": "attach",
      // Expoのデバッグポートにアタッチ
      "port": 19000
    }
  ]
}